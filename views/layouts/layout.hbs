<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script" rel="stylesheet">
</head>

<body>
    {{{body}}}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="/javascripts/Config.js"></script>
    <script src="/javascripts/web3.min.js"></script>

    <script>
        var flag = false;
       
        ///start window.addevent
        window.addEventListener('load', function () {

            if (typeof web3 !== 'undefined') {
                var  web3js = new Web3(web3.currentProvider);


                web3.version.getNetwork((err, netId) => {
                    switch (netId) {
                        case "1":
                            console.log('This is mainnet');
                            flag = true;
                            window.location.href = "/choose-ropsten";
                            break;
                        case "2":
                            console.log('This is the deprecated Morden test network.');
                            flag = true;
                            window.location.href = "/choose-ropsten";
                            break;
                        case "3":
                            console.log('This is the ropsten test network.');
                            break;
                        case "4":
                            console.log('This is the Rinkeby test network.');
                            flag = true;
                            window.location.href = "/choose-ropsten";
                            break;
                        case "42":
                            console.log('This is the Kovan test network.');
                            flag = true;
                            window.location.href = "/choose-ropsten";
                            break;
                        default:
                            console.log('This is an unknown network.');
                            window.location.href = "/choose-ropsten";
                            flag = true;
                    }
                    web3.currentProvider.publicConfigStore.on("update", function (result) {


                        if (result.selectedAddress == undefined) {
                            flag = true;
                            console.log("47", "You can login");
                            window.location.href = "/login-metamask";
                        } else {
                            window.localStorage.setItem('isLogin', result.selectedAddress);
                            console.log("49", "Ok already login");
                            
                            if (flag == false) {
                                if (localStorage.getItem('account') !== result.selectedAddress) {
                    
                                    window.location.href = "/zombie-details";
                                    window.localStorage.setItem('account', result.selectedAddress);
                                }
                            }
                           
                        }
                    });

                });






            } else {
                console.log("You can setup metamask");

            }


            //end window.addevent
        });



    </script>

</body>

</html>